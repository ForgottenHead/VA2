<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.ComposableToDo" parent="android:Theme.Material.Light.NoActionBar">
        <item name="android:statusBarColor">@color/status_bar</item>
    </style>

    <style name="Theme.CustomSplashScreenTheme" parent="Theme.AppCompat.Light">
        <item name="windowSplashScreenBackground">@color/background</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/ic_launcher_foreground</item>
        <item name="windowSplashScreenAnimationDuration">300</item>
        <item name="postSplashScreenTheme">@style/Theme.ComposableToDo</item>
    </style>
    <style name="Theme.ComposableToDo.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="Theme.ComposableToDo.AppBarOverlay"
        parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="Theme.ComposableToDo.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>